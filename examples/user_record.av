// Product type (record) example: user data

record User
  name: String
  age: Int

fn greet(u: User) -> String
  ? "Greet a user by name"
  u.name

fn is_adult(u: User) -> Bool
  ? "Check if a user is an adult (18+)"
  match u:
    User(name, age) -> age >= 18

fn main()
  ! [Console]
  val alice = User(name: "Alice", age: 30)
  val bob = User(name: "Bob", age: 15)
  Console.print(greet(alice))
  Console.print(greet(bob))
  Console.print(is_adult(alice))
  Console.print(is_adult(bob))
